<section class="Section">
	{{#unless model.featured}}
		<div class="Container">
			{{#is-loading}}
				Loading featured radio channelsâ€¦
			{{/is-loading}}
		</div>
	{{else}}
		<div class="Container Container--full">
			{{#list-manipulation list=model.featured as |manipulatedList|}}
				<div class="Grid">
					<div class="Grid-cell">
						<p>Welcome! Start your journey by listening to one of the radio channels here.</p>
						<p class="BtnGroup--full BtnGroup--vertical">
							{{play-random-channel class="Btn--large"}}
						</p>
						{{#unless session.currentUser.channels.firstObject}}
							<p>
								With Radio4000 you have the tools to create and maintain a radio with all your favorite tracks from YouTube. <a href="{{href-to 'auth.signup'}}">Create my radio</a>.
							</p>
						{{/unless}}
					</div>
					{{#each manipulatedList as |channel|}}
						<div class="Grid-cell">
							{{channel-card channel=channel}}
						</div>
					{{/each}}
				</div>
			{{/list-manipulation}}
		</div>
	{{/unless}}
</section>
